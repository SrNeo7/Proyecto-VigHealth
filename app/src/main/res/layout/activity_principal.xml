<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity"
    android:background="@color/softBlue">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvTension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                app:cardBackgroundColor="@color/bluePrime"
                app:cardCornerRadius="15sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/tensiongradient">


                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90sp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/tension_color"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPplTension"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="12/8"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPplTenVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="Normal"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    </LinearLayout>


                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPeso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="30sp"
                app:cardBackgroundColor="@color/bluePrime"
                app:cardCornerRadius="15sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/weightgradient">

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/peso_color"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPplPeso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="90 kg."
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPplPesoDif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="-0'7 kg."
                        android:textSize="35sp"
                        android:textStyle="bold"/>
                 </LinearLayout>

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30sp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                app:cardBackgroundColor="@color/bluePrime"
                app:cardCornerRadius="15sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/sportgradient">

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/actividad_color" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPplActividadTipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="Correr"
                        android:textColor="@color/white"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPplActividadDistancia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:textColor="@color/white"
                        tools:text="10,67KM"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvAlergia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="30sp"
                app:cardBackgroundColor="@color/bluePrime"
                app:cardCornerRadius="15sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/alergicgradient">

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/alergia_color_2"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPplAlergeno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="Olivo"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPplConVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="Baja"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                 </LinearLayout>

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30sp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvMedicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                app:cardBackgroundColor="@color/bluePrime"
                app:cardCornerRadius="15sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/medgradient">

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/medicamento_color"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPplMedNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="Ibuprofeno"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPplMedPeriodo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="8 horas"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                 </LinearLayout>

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvHidratacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="30sp"
                app:cardBackgroundColor="@color/bluePrime"
                app:cardCornerRadius="15sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/bluegradient">

                    <ImageView
                        android:layout_width="90sp"
                        android:layout_height="90sp"
                        android:layout_marginStart="10sp"
                        android:src="@drawable/hidratacion_color"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvPplHiEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="Activo"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvPplHiFrec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        tools:text="3 horas"
                        android:textSize="35sp"
                        android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>



            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>