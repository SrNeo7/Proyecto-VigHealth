<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevaActividadActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/almostRed"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tbNuevaActividad"
        tools:layout_editor_absoluteX="-2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Distancia"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ritmo"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDistanciaNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.15"
                android:text="--"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvRitmoNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.95"
                android:text="--"
                android:textAlignment="center"
                android:textSize="20sp" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp"/>

    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapActividad"
        android:layout_width="match_parent"
        android:layout_height="476dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintBottom_toTopOf="@+id/layoutTiempo"/>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tbNuevaActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/almostRed"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:text="Nueva Actividad"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/layoutTiempo"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:background="@color/almostRed"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapActividad">

        <TextView
            android:id="@+id/tvHoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="00h" />

        <TextView
            android:id="@+id/tvMinutos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_weight="0.25"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="00m" />

        <TextView
            android:id="@+id/tvSegundos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_weight="1"
            android:textAlignment="viewStart"
            android:textSize="30sp"
            tools:text="00s" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>