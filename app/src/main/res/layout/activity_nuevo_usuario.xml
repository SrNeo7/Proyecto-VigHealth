<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoUsuarioActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="@string/tv_nuevo_usuario"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNombreUsuario"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_marginTop="148dp"
        android:autofillHints="Introduzca su nombre"
        android:ems="10"
        android:hint="@string/et_nombre_usuario"
        android:inputType="textPersonName"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etApellidosUsuario"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:autofillHints="Introduzca sus apellidos"
        android:ems="10"
        android:hint="@string/et_apellidos_usuario"
        android:inputType="textPersonName"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNombreUsuario" />

    <Spinner
        android:id="@+id/spGenero"
        android:layout_width="142dp"
        android:layout_height="62dp"
        android:layout_marginTop="444dp"
        android:hint="@string/sp_genero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/etAlturaUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAlturaUsuario"
        android:layout_width="128dp"
        android:layout_height="63dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="444dp"
        android:autofillHints="Introduzca su altura"
        android:ems="10"
        android:hint="@string/et_altura_usuario"
        android:inputType="numberDecimal"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEdadUsuario"
        android:layout_width="128dp"
        android:layout_height="62dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="348dp"
        android:autofillHints="Introduzca su edad"
        android:ems="10"
        android:hint="@string/et_edad_usuario"
        android:inputType="number"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPesoUsuario"
        android:layout_width="142dp"
        android:layout_height="62dp"
        android:layout_marginTop="348dp"
        android:autofillHints="Introduzca su peso"
        android:ems="10"
        android:hint="@string/et_peso_usuario"
        android:inputType="numberDecimal"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toEndOf="@+id/etEdadUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btbGuardarUsuario"
        android:layout_width="225dp"
        android:layout_height="59dp"
        android:layout_marginBottom="84dp"
        android:text="@string/btn_guardar_datos"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>