<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softBlue"
    tools:context=".ConfiguracionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvClkDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_datos_personales"
            android:textSize="30sp"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginStart="25sp"
            android:layout_marginTop="50sp"
            android:hint="@string/hint_datos_personales"
            android:focusable="true" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvClkBorrarDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_borrar_datos"
            android:textSize="30sp"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_marginStart="25sp"
            android:hint="@string/hint_borrar_datos"
            android:focusable="true" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvClkCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginBottom="20sp"
            android:clickable="true"
            android:hint="@string/hint_cerrar_sesion"
            android:minHeight="48dp"
            android:text="@string/tv_cerrar_sesion"
            android:textSize="30sp"
            android:textStyle="bold"
            android:focusable="true" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>